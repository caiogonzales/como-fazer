<%- include('../header') %>
<div class="container mt-3">
<a href="/publicacoes/nova" class="btn btn-light">Novo Post!</a>

<table class="table table-striped table-hover table-dark mt-3">
    <thead>
        <tr>
            <th scope="col">Posts</th>
            <th scope="col">Ações</th>
        </tr>
    </thead>
    <tbody>
    <% publicacoes.forEach(post => { %>
        <tr>
            <th scope="row"><%= post.titulo %></th>
            <td><a href="/publicacoes/editar/<%= categoria %>/<%= post.id %>" class="btn btn-warning btn-sm">Editar</a>  <a href="/publicacoes/excluir/<%= categoria %>/<%= post.id %>" class="btn btn-danger btn-sm">Excluir</a></td>
        </tr>
    <% }) %>
    </tbody>
</table>

</div>
<%- include('../footer') %>