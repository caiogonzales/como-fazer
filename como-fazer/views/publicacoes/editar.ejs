<%- include('../header') %>
<div class="container mt-5">
    <form action="/publicacoes/editar/<%= categoria %>/<%= publicacao.id %>" method="POST">
        <div class="form-group">
            <label for="titulo">Titulo</label>
            <input type="text" class="form-control" id="titulo" name="titulo" placeholder="Titulo do post" value="<%= publicacao.titulo %>">
        </div>
        <div class="form-group">
            <label for="conteudo">Conteudo</label>
            <textarea class="form-control" id="conteudo" name="conteudo" placeholder="conteudo do post"><%= publicacao.conteudo %></textarea>
        </div>
        <button type="submit" class="btn btn-success btn-sm">Salvar</button>
    </form>
</div>
<%- include('../footer') %>