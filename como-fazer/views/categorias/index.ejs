<%- include('../header') %>
<div class="container mt-3">
<a href="/categorias/nova" class="btn btn-light">Nova categoria</a>
<a href="/publicacoes/nova" class="btn btn-light">Novo Post!</a>

<table class="table table-striped table-hover table-dark mt-3">
    <thead>
        <tr>
            <th scope="col">Categorias</th>
            <th scope="col">Ações</th>
        </tr>
    </thead>
    <tbody>
    <% categorias.forEach(categoria => { %>
        <tr>
            <th scope="row">
                <a href="/publicacoes/categoria/<%= categoria.id %>">
                    <%= categoria.categoria %>
                </a>
            </th>
            <td><a href="/categorias/editar/<%= categoria.id %>" class="btn btn-warning btn-sm">Editar</a>  <a href="/categorias/excluir/<%= categoria.id %>" class="btn btn-danger btn-sm">Excluir</a></td>
        </tr>
    <% }) %>
    </tbody>
</table>

</div>
<%- include('../footer') %>